{
    "name": "base-api",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "main": "build/app.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/app.ts",
        "build": "rimraf ./build && tsc --skipLibCheck",
        "start": "cross-env NODE_ENV=production node ./build/app.js",
        "go": "cross-env NODE_ENV=production npm run build && npm run start",
        "debug": "nodemon --inspect",
        "prepare": "husky install",
        "sync": "cross-env DB_SYNC=true npm run dev"
    },
    "devDependencies": {
        "@types/cors": "2.8.7",
        "@types/express": "4.17.12",
        "@types/jsonwebtoken": "8.5.0",
        "@types/node": "14.6.0",
        "@types/nodemailer": "6.4.4",
        "@types/uuid": "8.3.1",
        "@types/ws": "8.5.3",
        "@types/yup": "^0.29.14",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "3.3.0",
        "husky": "^6.0.0",
        "jest": "27.3.1",
        "nodemon": "2.0.4",
        "ts-jest": "27.0.7",
        "ts-node": "8.10.2",
        "typescript": "3.9.7"
    },
    "dependencies": {
        "cors": "2.8.5",
        "crypto-js": "4.1.1",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "morgan": "^1.10.0",
        "nodemailer": "6.7.1",
        "yup": "^0.32.11"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
